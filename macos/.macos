#!/bin/zsh

echo "üçé Applying macOS system settings..."

# Close System Preferences to prevent override
osascript -e 'tell application "System Preferences" to quit'

###############################################################################
# Keyboard & Input
###############################################################################

echo "‚å®Ô∏è Setting keyboard preferences..."


# Set key repeat rate
defaults write NSGlobalDomain KeyRepeat -int 2

# Set delay until repeat
defaults write NSGlobalDomain InitialKeyRepeat -int 15

# Disable automatic capitalization
defaults write NSGlobalDomain NSAutomaticCapitalizationEnabled -bool 0

# Disable smart dashes
defaults write NSGlobalDomain NSAutomaticDashSubstitutionEnabled -bool 0

# Disable automatic period substitution
defaults write NSGlobalDomain NSAutomaticPeriodSubstitutionEnabled -bool 0

# Disable smart quotes
defaults write NSGlobalDomain NSAutomaticQuoteSubstitutionEnabled -bool 0

# Disable auto-correct
defaults write NSGlobalDomain NSAutomaticSpellingCorrectionEnabled -bool 0

###############################################################################
# Finder
###############################################################################

echo "üìÅ Setting Finder preferences..."

# Show hidden files
defaults write com.apple.finder AppleShowAllFiles -bool YES

# Show path bar
defaults write com.apple.finder ShowPathbar -bool false

# Show status bar
defaults write com.apple.finder ShowStatusBar -bool false

# Show file extensions
defaults write NSGlobalDomain AppleShowAllExtensions -bool 1

# Disable warning when changing file extension
defaults write com.apple.finder FXEnableExtensionChangeWarning -bool false

# Finder view style
defaults write com.apple.finder FXPreferredViewStyle -string "Nlsv"

###############################################################################
# Dock
###############################################################################

echo "üéØ Setting Dock preferences..."

# Set Dock icon size
defaults write com.apple.dock tilesize -int 48

# Auto-hide the Dock
defaults write com.apple.dock autohide -bool 1

# Auto-hiding delay
defaults write com.apple.dock autohide-delay -float 0

# Show recent applications in Dock
defaults write com.apple.dock show-recents -bool 0

###############################################################################
# Screenshots
###############################################################################

echo "üì∏ Setting screenshot preferences..."

# Create Screenshots directory
mkdir -p ~/Screenshots

# Screenshot location
defaults write com.apple.screencapture location -string "$HOME/Screenshots"

# Screenshot format
defaults write com.apple.screencapture type -string "png"

# Disable shadow in screenshots
defaults write com.apple.screencapture disable-shadow -bool false

###############################################################################
# Trackpad
###############################################################################

echo "üëÜ Setting trackpad preferences..."

# Enable tap to click
defaults write com.apple.driver.AppleBluetoothMultitouch.trackpad Clicking -bool 1
defaults -currentHost write NSGlobalDomain com.apple.mouse.tapBehavior -int 1
defaults write NSGlobalDomain com.apple.mouse.tapBehavior -int 1

# Enable three finger drag
defaults write com.apple.driver.AppleBluetoothMultitouch.trackpad TrackpadThreeFingerDrag -bool 1
defaults write com.apple.AppleMultitouchTrackpad TrackpadThreeFingerDrag -bool 1

###############################################################################
# Apply changes
###############################################################################

echo "‚ú® Restarting affected applications..."

# Restart Finder and Dock
killall Finder
killall Dock

# Restart SystemUIServer
killall SystemUIServer

echo "‚úÖ macOS settings applied!"
echo "‚ö†Ô∏è Some changes may require a logout/restart to take effect."
